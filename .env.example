# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Session Security
SESSION_SECRET=your-super-secure-random-session-secret-at-least-32-characters-long

# Replit Integration (if using Replit Auth)
REPL_ID=your-repl-id
REPLIT_DOMAINS=your-domain.com,another-domain.com
ISSUER_URL=https://replit.com/oidc

# Server Configuration
NODE_ENV=production
PORT=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Configuration (if using AI features)
OPENAI_API_KEY=your-openai-api-key
AI_RATE_LIMIT_MAX_REQUESTS=10

# File System Limits
MAX_PROJECTS_PER_USER=50
MAX_FILES_PER_PROJECT=1000
MAX_FILE_SIZE_MB=10

# Docker Configuration (for secure terminal execution)
DOCKER_ENABLED=true
DOCKER_IMAGE=node:18-alpine
CONTAINER_TIMEOUT_MS=300000

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# CORS Configuration
CORS_ORIGIN=https://your-domain.com